<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imagecity"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/hinhnen"
        android:scaleType="centerCrop"
        android:padding="2dp"


        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"

    />
    <TextView
        android:id="@+id/namecity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/imagecity"
        android:text="Ha Noi"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        android:paddingLeft="8dp"
        android:textAppearance="@style/MaterialAlertDialog.MaterialComponents.Title.Panel.CenterStacked"
        android:textFontWeight="500"
        />


















    </RelativeLayout>